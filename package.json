{
  "name": "solace-candidate-assignment",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:slow": "SIMULATE_SLOW_NETWORK=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "lint-staged",
    "generate": "drizzle-kit generate",
    "migrate:up": "node ./src/db/migrate.js",
    "seed": "npx tsx src/db/seed/index.ts",
    "seed:static": "npx tsx src/db/seed/static-seed.ts",
    "seed:small": "DATASET_SIZE=small npx tsx src/db/seed/large-seed.ts",
    "seed:medium": "DATASET_SIZE=medium npx tsx src/db/seed/large-seed.ts",
    "seed:large": "DATASET_SIZE=large npx tsx src/db/seed/large-seed.ts",
    "seed:xlarge": "DATASET_SIZE=xlarge npx tsx src/db/seed/large-seed.ts",
    "db:reset": "docker compose down && docker compose up -d && npx drizzle-kit push --force && npm run seed",
    "db:setup": "docker compose up -d && npx drizzle-kit push --force && npm run seed",
    "db:setup:large": "docker compose up -d && npx drizzle-kit push --force && npm run seed:large",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.32.1",
    "next": "^14.2.19",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
